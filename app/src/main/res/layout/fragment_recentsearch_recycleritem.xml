<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/R_closeBTN"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="18dp"
            android:background="@drawable/ic_baseline_close_24"
            android:backgroundTint="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="@+id/recentsearchitem"
            app:layout_constraintEnd_toEndOf="@+id/recentsearchitem"
            app:layout_constraintHorizontal_bias="0.852"
            app:layout_constraintStart_toStartOf="@+id/recentsearchitem"
            app:layout_constraintTop_toTopOf="@+id/recentsearchitem"
            app:layout_constraintVertical_bias="0.533" />

        <TextView
            android:id="@+id/recentsearchitem"
            android:layout_width="67dp"
            android:layout_height="30dp"
            android:background="@drawable/recent_search_border"
            android:gravity="center_vertical"
            android:text="  테스트"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <Space
        android:layout_width="15dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />
</LinearLayout>