<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainSearchFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="411dp"
        android:layout_height="650dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <ImageButton
                android:id="@+id/backBTN2"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:backgroundTint="#FFFFFF"
                android:foregroundGravity="center"
                android:src="@drawable/ic_baseline_arrow_back_ios_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/search"
                app:layout_constraintHorizontal_bias="0.842"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.428" />

            <SearchView
                android:id="@+id/search"
                android:layout_width="328dp"
                android:layout_height="47dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="16dp"
                android:background="@drawable/search_boader"
                android:iconifiedByDefault="false"
                android:queryBackground="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.428" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="13dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/RecentSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="최근 검색어"
                android:textColor="#484848"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="전체삭제"
                android:textColor="#AAAAAA" />

            <Space
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_weight="0.1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/R_recentsearch"
            android:layout_width="364dp"
            android:layout_height="33dp"
            android:layout_gravity="center"
            tools:listitem="@layout/fragment_recentsearch_recycleritem" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="39dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="14dp"
                android:layout_height="24dp"
                android:layout_weight="0.1" />

            <TextView
                android:id="@+id/PopularSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="인기 검색어"
                android:textColor="#484848"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="240dp"
                android:layout_height="24dp"
                android:layout_weight="1" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="17dp" />

    </LinearLayout>

</LinearLayout>